<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taskmanager">

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskManager">
        <activity
            android:name=".presentation.logoActivity.LogoActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.mainActivity.MainActivity" />
        <activity android:name=".presentation.loginActivity.LoginActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.signUpActivity.SignUpActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.amendOrCreateTaskActivity.AmendOrCreateTaskActivity" android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>